<Window x:Class="Пример_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Пример_1"
        mc:Ignorable="d"
        Title="Пример 1" Height="450" Width="800" x:Name="MyWindow" FontFamily="Microsoft YaHei UI">
    <Grid>
        <Label Content="{Binding Width, ElementName=MyWindow}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" FontFamily="Microsoft YaHei UI" FontSize="16"/>
        <Slider x:Name="Slider" Maximum="100"/>
        <Label Content="{Binding Value, ElementName=Slider}" HorizontalAlignment="Left" VerticalAlignment="Center" Width="200" FontFamily="Microsoft YaHei UI" FontSize="16"/>
    </Grid>
</Window>
